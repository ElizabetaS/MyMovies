<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/DarkPrimary">

    <ImageView
        android:id="@+id/slikaFilm"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"/>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/slikaFilm"
      android:id="@+id/film"
      android:padding="5dp"
      android:orientation="horizontal">
      <ImageView
          android:id="@+id/srceFilm"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_marginTop="7dp"
          android:src="@mipmap/favourites_empty_hdpi"
          android:layout_marginRight="10dp"/>
      <TextView
          android:id="@+id/imeFilm"
          android:layout_width="wrap_content"
          android:layout_height="40dp"
          android:textColor="@color/white"
          android:textSize="15dp"
          android:layout_marginTop="3dp"/>
  </LinearLayout>
    <LinearLayout
        android:id="@+id/rej"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/film"
        android:padding="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ratingbar"
            android:layout_width="25dp"
            android:src="@mipmap/rate_empty_hdpi"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/rejting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginRight="10dp"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/watchlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rej"
        android:padding="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/znakcewathclist"
            android:layout_width="25dp"
            android:src="@mipmap/watchlist_add_hdpi"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/addtoWatchList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15dp"/>
    </LinearLayout>
</RelativeLayout>